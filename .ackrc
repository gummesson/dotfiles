# General stuff
--sort-files
--color
--group
--smart-case

# Ignore directories
--ignore-dir=log
--ignore-dir=tmp

# Add additional HTML extensions
--type-add
html=.erb,.haml

# Add additional CSS extensions
--type-add
css=.sass,.scss,.less

# Add Markdown extensions
--type-set
markdown=.md,.mkd.,.markdown
