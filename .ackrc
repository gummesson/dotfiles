# Always sort the files
--sort-files

# Colors please
--color

# Print a heading and a break for ever result
--group

# Add additional HTML extensions
--type-add
html=.erb,.haml

# Add additional CSS extensions
--type-add
css=.sass,.scss,.less

# Add Markdown extensions
--type-set
markdown=.md,.mkd.,.markdown

# Ignore directories
--ignore-dir=log
--ignore-dir=tmp
