# -- .muttrc ------------------------------------------------------- {{{
#
# -- Base
# -- Colors
# -- Paths
# -- Hooks
# -- Views
# -- Keybindings
# -- Macros
#
# }}}

# -- Base ---------------------------------------------------------- {{{

set realname = "Ellen Gummesson"
set use_from = "yes"
set editor = "vim"
set sendmail_wait = 0
set folder = "~/.mail"
set delete = yes
unset record

source "/home/ellen/.mutt/accounts/gmail/offline.muttrc"

# }}}

# -- Colors -------------------------------------------------------- {{{

source "/home/ellen/.mutt/colors.muttrc"

# }}}

# -- Paths --------------------------------------------------------- {{{

set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"
set mailcap_path = "~/.mutt/mailcap"

# }}}

# -- Hooks --------------------------------------------------------- {{{

folder-hook Gmail/* source "/home/ellen/.mutt/accounts/gmail/offline.muttrc"

# }}}
#
# -- Views --------------------------------------------------------- {{{

set sort = threads
set sort_aux = reverse-last-date-received
set pager_stop
set askcc
set fcc_attach
set forward_format = "Fwd: %s"
set forward_decode
set attribution = "On %d, %n wrote:"
set fast_reply
set reply_to
set reverse_name
set include
set forward_quote
set edit_headers
set smart_wrap = yes
unset move
unset mark_old
unset mime_forward
unset markers
auto_view text/html
alternative_order text/plain text/html

# }}}

# -- Keybindings --------------------------------------------------- {{{

bind index   "^"      imap-fetch-mail
bind index   gg       first-entry
bind index   G        last-entry
bind index   R        group-reply
bind pager   k        previous-line
bind pager   j        next-line
bind pager   gg       top
bind pager   G        bottom
bind pager   R        group-reply
bind attach  <return> view-mailcap
bind compose p        postpone-message

# }}}

# -- Macros -------------------------------------------------------- {{{

macro pager \Cu "<pipe-message>urlview<enter>"

# }}}

# vim:foldmethod=marker
