# -- .ackrc -------------------------------------------------------- {{{
#
# -- General
# -- Ignores
# -- Types
#
# }}}

# -- General ------------------------------------------------------- {{{

--sort-files
--color
--group
--smart-case
--pager=less -r

# }}}

# -- Ignores ------------------------------------------------------- {{{

# -- Directories --

--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=node_modules
--ignore-dir=bower_components
--ignore-dir=public
--ignore-dir=_site
--ignore-dir=vendor
--ignore-dir=.bundle
--ignore-dir=.gems
--ignore-dir=.gs

# -- Files --

--ignore-file=is:tags

# }}}

# -- Types --------------------------------------------------------- {{{

--type-set=markdown=.md,.mkd.,.markdown,.txt
--type-add=html=.erb,.haml,.jade
--type-add=css=.sass,.scss,.less,.styl

# }}}

# vim:foldmethod=marker
