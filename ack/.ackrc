# -- .ackrc -------------------------------------------------------- {{{
#
# -- General
# -- Ignores
# -- Types
#
# }}}

# -- General ------------------------------------------------------- {{{

--sort-files
--color
--group
--smart-case
--pager=less -r

# }}}

# -- Ignores ------------------------------------------------------- {{{

# -- Directories --

--ignore-dir=.gems
--ignore-dir=.git
--ignore-dir=.gs
--ignore-dir=bower_components
--ignore-dir=node_modules
--ignore-dir=vendor
--ignore-dir=build
--ignore-dir=coverage
--ignore-dir=dist
--ignore-dir=doc
--ignore-dir=public
--ignore-dir=www

# -- Files --

--ignore-file=is:tags
--ignore-file=is:bundle.css
--ignore-file=is:bundle.js
--ignore-file=is:Session.vim

# }}}

# -- Types --------------------------------------------------------- {{{

--type-set=markdown=.md,.mkd.,.markdown,.txt
--type-add=html=.erb,.haml,.jade
--type-add=css=.sass,.scss,.less,.styl

# }}}

# vim:foldmethod=marker
