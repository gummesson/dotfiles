--recurse=yes
--fields=-k
--fields=+K

--exclude=.bundle
--exclude=.gems
--exclude=.git
--exclude=.gs
--exclude=_site
--exclude=bower_components
--exclude=dist
--exclude=node_modules
--exclude=public
--exclude=tmp
--exclude=vendor

--langdef=css
--langmap=css:.css
--langmap=css:+.scss
--langmap=css:+.sass
--langmap=css:+.styl
--langmap=css:+.less
--regex-css=/^[ \t]*(([A-Za-z0-9_-]+[ \t\n,]+)+)\{/\1/t,tag,tags/
--regex-css=/^[ \t]*#([A-Za-z0-9_-]+)/#\1/i,id,ids/
--regex-css=/^[ \t]*\.([A-Za-z0-9_-]+)/.\1/c,class,classes/

--langdef=markdown
--langmap=markdown:.md
--langmap=markdown:+.txt
--regex-markdown=/^#{1,6}[ \t](.*$)/\1/h,heading,headings/
