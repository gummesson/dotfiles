#!/usr/bin/env sh

# Usage: status-bar

volume=$(amixer sget Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')%
wifi=$(iwconfig wlp2s0 | awk 'sub(/Quality=/, "") { print $2; }')
battery=$(acpi -b | awk 'gsub(/,/, "") { print $4 " (" $3 ")"; }')
clock=$(date '+%H:%M')

echo -e "$volume • $wifi • $battery • $clock"
