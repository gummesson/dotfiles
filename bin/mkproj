#!/usr/bin/env sh

# mkproj <name>

make() {
  file="$1"
  if [ ! -f "$file" ]; then
    mkdir -p "$(dirname $file)"
    touch "$file"
  fi
}

case "$1" in
  "node")
    files=("README.md" "index.js" "test/index.js")
  ;;
  "frontend")
    files=("index.html" "assets/js/index.js" "assets/css/index.css")
  ;;
  *)
    echo "Invalid option."
  ;;
esac

for i in ${files[@]}; do
  make $i
done; unset files
