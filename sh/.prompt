# -- .prompt ------------------------------------------------------- {{{

red="\[\033[0;31m\]"
yellow="\[\033[0;33m\]"
reset="\[\033[0m\]"

function __git_branch() {
  [[ -d .git ]] && git symbolic-ref --short HEAD 2> /dev/null | awk '{ print "(" $1 ") "; }'
}

function __git_dirty() {
  [[ -d .git  ]] && [[ $(git status --porcelain 2> /dev/null) != "" ]] && echo "* "
}

PS1="$red\w $yellow\$(__git_branch)$reset\$(__git_dirty)"

unset red
unset yellow
unset reset

# }}}

