# -- `mkcd` -------------------------------------------------------- {{{

function mkcd() {
  mkdir -p "$1"
  cd "$1"
}

# }}}

# -- `tmux` -------------------------------------------------------- {{{

function tnew() {
  tmux new-session -As "$(basename $PWD)"
}

