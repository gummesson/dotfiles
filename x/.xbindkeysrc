# -- .xbindkeysrc -------------------------------------------------- {{{

"xbacklight -inc 20"
  XF86MonBrightnessUp

"xbacklight -dec 20"
  XF86MonBrightnessDown

"amixer --quiet sset Master 5- && sh ~/.local/bin/volume"
  XF86AudioLowerVolume

"amixer --quiet sset Master 5+ && sh ~/.local/bin/volume"
  XF86AudioRaiseVolume

"amixer --quiet sset Master toggle"
  XF86AudioMute

"scrot ~/Pictures/Screenshots/%Y%m%d-%H%M%S-screenshot.png"
  Print

# }}}

# vim:foldmethod=marker:filetype=conf
