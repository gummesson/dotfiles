#!/usr/bin/env sh

# exec <path/to/script>

# Set background color
xsetroot -solid "#262626"

# Configure the status bar
while true; do
  volume="$(amixer sget Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')%"
  wifi="$(iwconfig wlp2s0 | sed -n '6p' | awk 'sub(/Quality=/, "") { print $2; }')"
  battery="$(acpi -b | awk 'gsub(/,/, "") { print $4; }')"
  clock="$(date '+%H:%M')"
  xsetroot -name "$volume • $wifi • $battery • $clock"
  sleep 3s
done &

# Start `dwm`
exec dwm
