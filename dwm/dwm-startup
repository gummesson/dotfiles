#!/bin/sh

# dwm-startup (/usr/bin/dwm-startup)

# Start `dwm` with a modified status bar
while true; do
  DB=$(dropbox status) 
  WIFI=$(iwconfig wlan0 | awk '/Link Quality/{ print $2 }' | sed 's/Quality=//') 
  BATT=$(acpi -b | awk '{ print $4 $5 }' | sed 's/,/ \/ /g') 
  VOL=$(amixer get PCM | awk '/Front Left:/{ print $5 }' | sed 's/\[\|\]//g') 
  DATE=$(date '+%d %b %Y') 
  TIME=$(date '+%H:%M')
  xsetroot -name "Db: $DB | W: $WIFI |  B: $BATT | V: $VOL | $DATE | $TIME"
  sleep 5s
done & exec dwm
